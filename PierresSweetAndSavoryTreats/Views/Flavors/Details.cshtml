@{
  Layout = "_Layout";
}

@model PierresSweetAndSavoryTreats.Models.Flavor

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This flavor has not been assigned any treats</p>
}
else
{
  <h4>Treats with this flavor:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Treat.Name</li>
    @* @using (Html.BeginForm("DeleteTreat", "Flavors"))
    {
      @Html.Hidden("joinId", @join.FlavorTreatId)
      <input type="submit" value="Delete"/>
    } *@
  }
  </ul>
}

<p>@Html.ActionLink("Add a Treat to this flavor", "AddTreat", new { id = Model.FlavorId })</p>

