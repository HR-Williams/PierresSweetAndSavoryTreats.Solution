@{
    ViewData["Title"] = "Home Page";
}

@model List<PierresSweetAndSavoryTreats.Models.Flavor>;

@using PierresSweetAndSavoryTreats.Models;    

@* <div class="text-center"> *@
    <h1 class="display-4">Welcome</h1>
    <p>Check out our sweet and savory treats!</Sp>

    <h1>Treats</h1>

    @if (ViewBag.Treats.Count == 0)
    {
    <h3>We don't currently have any treats</h3>
    }

    
    @foreach (Treat treat in ViewBag.Treats)
    {
    <p>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new { id = treat.TreatId })</p>
    }
  

    <h2>Flavors</h2>
    @if (@Model.Count == 0)
    {
    <p>Nothing to see here</p>
    }

    
    @foreach (Flavor flavor in Model)
    {
        <p>@Html.ActionLink($"{flavor.Description}", "Details","Flavors", new { id = flavor.FlavorId })</p>
    }
  

    <p>@Html.ActionLink("Create a new account", "Index", "Account")</p>
    <p>@Html.ActionLink("Login", "Login", "Account")</p>
@* </div> *@

